<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.proyectoAppv0" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>proyectoAppv0</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <!-- Para añadir el logo que queramos a la app se haría así.
    Debemos añadir otros <icon src="" gap:platform="android" /> por si queremos que, dependiendo del tamaño del móvil, se vea que la calidad del logo es mejor -->
    <!--<icon src="ruta/logo.png" /> Así decimos que este se usará par atodas las plataformas-->

    <!-- De esta manera,  se podría añadir una imagen mientras se carga la aplicación-->
    <splash src="splash.png" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
